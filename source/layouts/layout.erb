<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <title><% if current_page.data.title %><%= current_page.data.title %> &middot; <% end %><%= data.site.name %></title>

  <meta name="viewport" content="width=device-width">
  <meta name="author" content="<%= data.site.creator %>">
  <meta name="copyright" content="<%= data.site.creator %>">
  <meta name="description" content="<%= data.site.description %>">
  <meta name="ICBM" content="34.023411,-118.403607">

  <link rel="stylesheet" href="//cloud.typography.com/7547452/674522/css/fonts.css">
  <%= stylesheet_link_tag "normalize", "syntax", "screen" %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <%= javascript_include_tag  "all" %>
</head>
<body class="<%= page_classes %>">
<% if current_page.url != "/" %>
  <main id="main" role="main">
    <%= partial "partials/header" %>
    <%= yield %>
  </main>
<% else %>
  <%= yield %>
<% end %>
</body>
</html>
